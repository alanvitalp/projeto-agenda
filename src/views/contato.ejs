<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contatos</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>


      <%- include('includes/messages') %>

      <div class="col">
        <form action="/contato/register" method="POST"> 
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Nome</label>
            <input type="text" class="form-control mt-2" name='nome'>
          </div>
          <div class="form-group mt-3">
            <label>sobrenome</label>
            <input type="text" class="form-control mt-2" name="sobrenome">
          </div>
          <div class="form-group mt-3">
            <label>Email</label>
            <input type="email" class="form-control mt-2" name="email">
          </div>
          <div class="form-group mt-3">
            <label>Telefone</label>
            <input type="tel" class="form-control mt-2" name="telefone">
          </div>
          <button type="submit" class="btn btn-primary mt-2">Enviar</button>
        </form>
      </div>

    </div>
    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer') %>
