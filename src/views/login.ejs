<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta abaixo</p>
    </div>
    <%- include('includes/messages') %>

    <div class="row">
      
      <div class="col">
        <h4>Faça seu cadastro</h4>
        <p>Se você ainda não tem conta, preencha o formulário abaixo:</p>

        <form action="/login/register" method="POST"> 
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu email</label>
            <input type="email" class="form-control mt-2" name='email'>
          </div>
          <div class="form-group mt-3">
            <label>Sua senha</label>
            <input type="password" class="form-control mt-2" name="password">
          </div>
          <button type="submit" class="btn btn-primary mt-2">Criar minha conta</button>
        </form>
      
      </div>

      <div class="col">
        <h4>Entrar no sistema</h4>
        <p>Faça seu login:</p>

        <form action="/login/login" method="POST"> 
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label>Seu email</label>
            <input type="email" class="form-control mt-2" name='email'>
          </div>
          <div class="form-group mt-3">
            <label>Sua senha</label>
            <input type="password" class="form-control mt-2" name="password">
          </div>
          <button type="submit" class="btn btn-primary mt-2">Entrar</button>
        </form>
      </div>
    </div>
    
    <div class="col-lg-2"></div>
  </div>
</div>


<%- include('includes/footer') %>
